    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "cwd": "${workspaceRoot}",
            "executable": "./bin/v1.icyradio-relay-controller.elf",
            "request": "launch",
            "type": "cortex-debug",
            "preLaunchTask": "Build",
            "servertype": "jlink",
            "device": "EFM32TG11BXXXF128",
            "svdFile": "${env:ARM_LIBROOT}/SiliconLabs.EFM32TG11B_DFP.5.8.10/SVD/EFM32TG11B/EFM32TG11B120F128GM32.svd",
            "interface": "swd",
            "swoConfig": {
                "enabled": true,
                "swoFrequency": 2000000,
                "cpuFrequency": 8000000,
                "source": "probe",
                "decoders": [
                    {
                        "port": 0,
                        "label": "Console",
                        "type": "console",
                        "showOnStartup": true
                    }
                ]
            }
        }
    ]
}